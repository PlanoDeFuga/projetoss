/* 
    Faça um programa que leia e valide as seguintes informações:
 - Nome: maior que 3 caracteres;
 - Idade: entre 0 e 150;
 - Salário: maior que zero;
 - Sexo: 'f' ou 'm';
 - Estado Civil: 's', 'c', 'v', 'd';
Dica: se sua variável é texto, o tamanho dela está armazenado em: texto.length
*/

function questionario() {
    let nome = window.prompt('Digite Seu Nome')

    if (nome.length <= 3) {
        alert('Nome tem que ter mais do que 3 caracterisca  ')
    }
        if (nome.length >= 3){
            alert('Nome Cadastrado')
        }
    let idade = window.prompt('Digite sua idade')
    if (idade >= 0 && idade <= 150) {
        alert('Idade Cadastrada')
    }
    else {
        alert('Idade invalida ')
    }
    let salario = window.prompt('Digite seu Salario')
    if (salario > 0) {
        alert('Salario Cadastrado')
    }
    else {alert ('Salario invalido')}
    let sexo = window.prompt ('Digite Seu Sexo F = Femenino M = Mascolino')
    if (sexo == F = sexo == f = sexo == M = sexo == m ) {
        alert ('Sexo Cadastrado')
    }
    else
     {
        alert (' Sexo Invalido')
    }
}
questionario();
